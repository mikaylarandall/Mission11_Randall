@{
}
@model Book

<div class="card m-1 p-1">
    <h4>
        @Model.Title
        <span class="rounded-pill text-black float-end"><small>By: @Model.Author</small></span>
    </h4>
    <ul>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Category: @Model.Classification/@Model.Category</li>
        <li>Number of Pages: @Model.PageCount</li>
        <li>Price: $@Model.Price</li>
    </ul>
</div>
